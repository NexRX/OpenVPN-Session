{
  "name": "typescript-action",
  "description": "GitHub Actions TypeScript template",
  "version": "0.0.0",
  "author": "",
  "private": true,
  "homepage": "https://github.com/actions/typescript-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "bugs": {
    "url": "https://github.com/actions/typescript-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/main/index.js",
    "./pre": "./dist/pre/index.js",
    "./post": "./dist/post/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "pnpm exec eslint . -c ./.github/linters/.eslintrc.yml",
    "package:main": "ncc build src/action/main.ts --license licenses.txt -o dist/main",
    "package:post": "ncc build src/action/post.ts --license licenses.txt -o dist/post",
    "package:pre": "ncc build src/action/pre.ts --license licenses.txt -o dist/pre",
    "package": "pnpm run package:main && pnpm run package:post && pnpm run package:pre",
    "package:watch": "pnpm run package -- --watch",
    "test": "jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/artifact": "^2.1.1",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@types/ping": "^0.4.4",
    "js-base64": "^3.7.6",
    "ping": "^0.4.4",
    "ping-wrapper": "^0.0.3",
    "ts-pattern": "^5.0.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}